<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_white_radius_top_15"
    android:clipChildren="false"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rl_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_dialog_claose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_14"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_14"
                android:adjustViewBounds="true"
                android:padding="@dimen/margin_8"
                android:src="@mipmap/ic_education_dialog_claose" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:padding="@dimen/margin_8"
                android:text="@string/str_dialog_select_pictrue_title"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/margin_16" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_text_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableRight="@mipmap/ic_select_pictrue_down"
            android:drawablePadding="@dimen/margin_6"
            android:padding="@dimen/margin_8"
            android:text="@string/str_dialog_select_pictrue_tips"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/margin_12" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/color_333333"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_16"
        android:paddingBottom="@dimen/margin_20">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_toLeftOf="@+id/ct_sure"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <com.ximalife.library.view.CustomTextView
            android:id="@+id/ct_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15"
            android:paddingLeft="@dimen/margin_18"
            android:paddingTop="@dimen/margin_5"
            android:paddingRight="@dimen/margin_18"
            android:paddingBottom="@dimen/margin_5"
            android:text="@string/str_sure"
            android:textColor="@color/white"
            app:textNormalSolidColor="@color/color_FC546B"
            app:textRadius="@dimen/margin_12" />

    </RelativeLayout>


</FrameLayout>
