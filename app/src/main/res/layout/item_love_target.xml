<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_6"
    android:layout_marginBottom="@dimen/margin_6"
    android:orientation="vertical">

    <com.ximalife.library.view.CustomTextView
        android:id="@+id/item_love_target_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_15"
        android:paddingTop="@dimen/margin_15"
        android:paddingRight="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_15"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/margin_16"
        app:textNormalSolidColor="@color/color_F1F1F1"
        app:textRadius="@dimen/margin_10"
        app:textStrokeColor="@color/color_333333"
        app:textStrokeWidth="@dimen/margin_1" />


</LinearLayout>
